name = "Map Chart"
description = "Descr"
short-description = "Short descr" 

[meta]
tags = ["map"]
export = "map"
show_on_landing = true

[deps]
scripts = ["http://cdn.anychart.com/geodata/1.2.0/countries/australia/australia.js"]
local-scripts = ["../anychart-bundle.min.js"]
styles = []

[code]
type = "js"
code = """
anychart.onDocumentReady(function() {
            var dataSet = anychart.data.set([
                {id: "AU.CT", value: 15, title: "Australian Capital Territory"},
                {id: "AU.VI", value: 23, title: "Victoria"},
                {id: "AU.WA", value: 86, title: "Western Australia"},
                {id: "AU.QL", value: 16, title: "Queensland"},
                {id: "AU.NS", value: 32, title: "New South Wales"},
                {id: "AU.NT", value: 64, title: "Northern Territory"},
                {id: "AU.TS", value: 28, title: "Tasmania"},
                {id: "AU.SA", value: 45, title: "South Australian"}
            ]);
            var dataSetForSeries = dataSet.mapAs({id: "id"});
            australiaMap = anychart.map();
            australiaMap.geoData(anychart.maps.australia);
            var series = australiaMap.choropleth(dataSetForSeries);
            series.geoIdField("code_hasc");
            series.allowPointsSelect(false);
            series.selectFill("#AED581");
            // Gets flag for selected state of the points.
            var currentSelecting = series.allowPointsSelect();
            australiaMap.title("The current selected state is " + currentSelecting);
            australiaMap.container("container");
            australiaMap.draw();
        });
"""

[style]
type = "css"
code = """
	
"""

[markup]
type = "html"
code = """
<html>
<head>
    <meta charset="UTF-8"/>
</head>
<body>
<div id="container" style="width: 100%; height: 100%"></div>
</body>
</html>
"""
